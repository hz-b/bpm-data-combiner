# which bpm"s does the python side consider active

record(waveform, "$(PREFIX):$(VIEW):active")
{
    field(DESC, "BPM monitored as active")
    field(DTYP, "pydev")
    field(FTVL, "CHAR")
    field(SCAN, "I/O Intr")
    field(INP,  "@pydev.iointr('$(PREFIX):$(VIEW):active')")
    field(NELM, 128)
    # info(Q:group, {
    #       "$(PREFIX)$(VIEW)": {
    #          "active": {+channel:"VAL"}
    #      }
    # })
    field(TPRO, 0)
}

