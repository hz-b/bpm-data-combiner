# BPM data collected
record(waveform, "$(PREFIX):$(VIEW):x:values")
{
    field(DESC, "x values")
    field(DTYP, "pydev")
    field(EGU, "nm")
    field(FTVL, "LONG")
    field(SCAN, "I/O Intr")
    field(INP,  "@pydev.iointr('$(PREFIX):$(VIEW):x:values')")
    field(NELM, 128)
    field(TPRO, 0)
    # info(Q:group, {
    #      "$(PREFIX)$(VIEW)": {
    #         "x.values": {+channel:"VAL"}
    #     }
    # })
}

record(waveform, "$(PREFIX):$(VIEW):x:valid")
{
    field(DESC, "x values (1 valid, 0, invalid)")
    field(DTYP, "pydev")
    field(FTVL, "CHAR")
    field(SCAN, "I/O Intr")
    field(INP,  "@pydev.iointr('$(PREFIX):$(VIEW):x:valid')")
    field(NELM, 128)
    field(TPRO, 0)
    # info(Q:group, {
    #      "$(PREFIX)$(VIEW)": {
    #         "x.active": {+channel:"VAL"}
    #     }
    # })
}


