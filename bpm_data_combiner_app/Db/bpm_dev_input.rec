# Input data collected from the different bpm devices

# Input of one record device ... collect them here
# locally (again)
# so one can check what the IOC uses
record(longin, "$(PREFIX)$(DEV_NAME):x")
{
    field(DESC, "mirror: x value $(REMOTE)")
    field(INP, {pva:{
        pv:"$(REMOTE)$(DEV_NAME)",
	field:"x",
	proc:true,
	}}
    )
    field(VAL, -1)
    field(PINI, "YES")
}

